        //         inputArea.value = "0";
        //         VALUE = "0";
        //         // document.getElementById("calculator-screen").value = "0";
        //     });
        // }


        // if (target.classList.contains('all-clear')) {
        //     console.log('clear', target.value);
        //     return;
        // }
    </script>

